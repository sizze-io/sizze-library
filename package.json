    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "size-limit": "^11.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "semantic-release": "^23.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sizze-io/sizze-library.git"
