    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "sizze-library",
  "author": "sizze",
  "module": "dist/sizze-library.esm.js",
  "size-limit": [
    {
      "path": "dist/sizze-library.cjs.production.min.js",
